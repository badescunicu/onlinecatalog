<ul class="nav pull-right">
<li><a href="/logout" class="ahref">Currently signed in as <%= @signed_in_fullname %>. Log out</a></li>
</ul>
</div>
<% end %>
</div>
</div>
</div>
<div class="container">
<div class="row">
<div class="span12">
<div class="hero-unit">
<%= yield %>
</div>
</div>
</div>
</div>
</body>
</html>
<script>
  $(".ahref, button").click(function() {$("body").fadeTo(100, 0.9);});
</script>
